<div class="index">
  <div class="index_header">
  	<% i = 0; letters_pages.each do |letter, pages| %>
	  <a href="#INDEX-<%=h("#{letter}-#{rnd}") %>"><%=h letter %></a>
	  <%=h " - " if (i += 1) < letters_pages.size %>
	<% end %>
  </div>
  <div class="index_body">
  	<% letters_pages.each do |letter, pages| %>
	  <div class="index_letter" id="INDEX-<%=h("#{letter}-#{rnd}") %>"><%=h letter %></div>
	  <div class="index_pages">
		<% i = 0; pages.each do |page| %>
		  <%=link_to h(types.length == 1 ? page[:page] : "#{page[:type]}/#{page[:page]}"), {:controller => 'page', :action => 'view', :type => h(page[:type]), :id => h(page[:page])} %>
		  <%=h ", " if (i += 1) < pages.size %>
	  	<% end %>
	  </div>
	<% end %>
  </div>
</div>