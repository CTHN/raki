<% @menus.each do |menu| %>
<ul>
  <% menu.each_with_index do |link, index| %>
  <% @c = "" %>
  <% @c += "first " if index == 0 %>
  <% @c += "last " if index == menu.size-1 %>
  <% @c += "selected " if "#{context[:real_type]}/#{context[:real_page]}" == link[0] %>
  
  <li class="<%= @c.chop %>"><a href="/<%= link[0] %>"><span><%= link[1] %></span></a></li>
  <% end %>
</ul>
<% end %>

