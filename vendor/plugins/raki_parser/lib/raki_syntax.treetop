grammar RakiSyntax

  rule syntax
    block*
  end

  rule block
    command / text
  end

  rule line
    !linebreak (block+)
  end

  rule command
    infobox / plugin / formating / list / linebreak / heading / link
  end

  # Sections

  rule plugin
    '[{' name:(!'}]' !whitespace text)+ whitespace
    body:(!'}]' (text / linebreak))* '}]' <PluginNode>
    /
    '[{' name:(!'}]' !whitespace text)* body:'' '}]' <PluginNode>

  end

  rule heading
    level:'!'+ text:(!linebreak text)+ linebreak* <HeadingNode>
  end

  rule infobox
    '%%' type:([\w]+) text:(!'%%' block)* '%%' <InfoboxNode>
  end

  # Lists

  rule list
    (linebreak listitem)+ <ListNode>
  end

  rule listitem
    level:space* type:('*' / '#') !'*' text:(!linebreak block)+
  end

  # Formating

  rule formating
    bold / italic / underlined / strikethrough
  end

  rule underlined
    "__" text:(!"__" block)* "__" <UnderlineNode>
  end

  rule italic
     "''" text:(!"''" block)* "''" <ItalicNode>
  end

  rule bold
    '**' text:(!'**' block)* '**' <BoldNode>
  end

  rule strikethrough
    '--' text:(!'--' block)* '--' <StrikethroughNode>
  end

  # Links

  rule link
    wikilink_title / wikilink_no_title / link_title / link_no_title / auto_link
  end

  rule wikilink_title
    '[' href:pagename '|' desc:(!']' text)+ ']' <WikiLinkNode>
  end

  rule wikilink_no_title
    '[' href:pagename desc:('') ']' <WikiLinkNode>
  end

  rule link_title
    '[' href:(!'|' !']' text)+ '|' desc:(!']' text)+ ']' <LinkNode>
  end

  rule link_no_title
    '[' href:(!']' text)+ desc:('') ']' <LinkNode>
  end

  rule auto_link
    href:(protocol non_whitespace+) desc:'' <LinkNode>
  end

  # Strings

  rule protocol
    (data_protocol '://') / (app_protocol ':')
  end

  rule data_protocol
    'https' / 'http' / 'ftp'
  end

  rule app_protocol
    'mailto' / 'sip' / 'skype'
  end

  rule pagename
    [ \wäüöÄÜÖß_+-]+
  end

  # Single characters

  rule text
    !linebreak [\d\D]
  end

  rule linebreak
    '' [\n] <LinebreakNode>
  end

  rule space
    !linebreak whitespace
  end

  rule whitespace
    [\s]
  end

  rule non_whitespace
    !linebreak [\S]
  end

end
