grammar RakiSyntax

  rule syntax
    block
  end

  rule block
    (command / text)*
  end

  rule command
    linebreak / link
  end

  rule link
    (link_title / link_no_title)
  end

   rule link_no_title
     '[' href:(!']' text)+ desc:('') ']' <LinkNode>
   end

  rule link_title
    '[' href:(!'|' !']' text)+ '|' desc:(!']' text)+ ']' <LinkNode>
  end

  rule text
    !linebreak [\d\D]
  end

  rule linebreak
    '' [\n] <LinebreakNode>
  end

end
