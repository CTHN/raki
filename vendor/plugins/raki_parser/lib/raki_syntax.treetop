grammar RakiSyntax

  rule syntax
    ignore_whitespace* (line+) ignore_whitespace*
  end

  rule line
    heading ignore_whitespace* / list !(!linebreak .) / inline+ !(!linebreak .) / linebreak
  end

  rule inline
    infobox / plugin / formating / link / text
  end

  # Sections

  rule plugin
    empty_plugin / text_plugin
  end

  rule empty_plugin
    '\\' name:(!'\\' !whitespace text)+  param:(parameter whitespace?)* ('\\end' / '\\') <PluginNode>
  end

  rule text_plugin
    '\\' name:(!'\\' !whitespace text)+  param:(parameter whitespace?)*
    body:(!'\\end' (text / linebreak))* '\\end' <PluginNode>
  end

  rule heading
    level:'!'+ text:(!linebreak text)+ <HeadingNode>
  end

  rule infobox
    '%%' type:([\w]+) text:(!'%%' inline)* '%%' <InfoboxNode>
  end

  # Lists

  rule list
    first_item:listitem other_items:(linebreak item:listitem)* <ListNode>
  end

  rule listitem
    level:space* type:('-' / '*' / '#') space text:(!linebreak inline)+
  end


  # Formating

  rule formating
    bold / italic / underlined / strikethrough
  end

  rule underlined
    '_' text:(!('_') inline ('_' !(whitespace))?)* '_' !(non_whitespace) <UnderlineNode>
  end

  rule italic
     '´' text:(!('´') inline ('´' !(whitespace))?)* '´' !(non_whitespace) <ItalicNode>
  end

  rule bold
    '*' text:(!('*') inline ('*' !(whitespace))?)* '*' !(non_whitespace) <BoldNode>
  end

  rule strikethrough
    '-' text:(!'-' inline ('-' !(whitespace))?)* '-' !(non_whitespace) <StrikethroughNode>
  end


  # Images

  #TODO


  # Links

  rule link
    wikilink_title / wikilink_no_title / link_title / link_no_title / auto_link
  end

  rule wikilink_title
    '[' href:pagename '|' desc:(!']' text)+ ']' <WikiLinkNode>
  end

  rule wikilink_no_title
    '[' href:pagename desc:('') ']' <WikiLinkNode>
  end

  rule link_title
    '[' href:(!'|' !']' text)+ '|' desc:(!']' text)+ ']' <LinkNode>
  end

  rule link_no_title
    '[' href:(!']' text)+ desc:('') ']' <LinkNode>
  end

  rule auto_link
    href:(protocol non_whitespace+) desc:'' <LinkNode>
  end


  # Strings

  rule parameter
    key:(!'=' !linebreak text)* '='
    value:(quoted_text / (!whitespace text))* <ParameterNode>
  end

  rule quoted_text
    ('"' ((!'"' !'\"' !whitespace text) / '\"' / whitespace)* '"') /
    ("'" ((!"'" !"\'" !whitespace text) / "\\\'" / whitespace)* "'")
  end

  rule protocol
    (data_protocol '://') / (app_protocol ':')
  end

  rule data_protocol
    'https' / 'http' / 'ftp'
  end

  rule app_protocol
    'mailto' / 'sip' / 'skype'
  end

  rule pagename
    [ \wäüöÄÜÖß_+-]+
  end


  # Single characters

  rule text
    !linebreak .
  end

  rule linebreak
    '' "\n"+ <LinebreakNode>
  end

  rule space
    !linebreak whitespace
  end

  rule whitespace
    [\s]
  end

  rule non_whitespace
    !whitespace .
  end

  rule ignore_whitespace
    whitespace '' <IgnoreNode>
  end

end
