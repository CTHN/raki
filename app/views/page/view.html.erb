<% if @page.exists? %>
  <%=insert_page @page.namespace, @page.name, (@page.revision ? @page.revision.id : nil) %>
<% else %>
  <div class="information">
    <%=t 'page.not_exists.msg' %>
    <% if @page.authorized?(User.current, :create) %>
      <%=t 'page.not_exists.edit_msg', :edit_link => link_to(t('page.not_exists.edit_link'), @page.url(:edit)) %>
    <% end %>
  </div>
<% end %>