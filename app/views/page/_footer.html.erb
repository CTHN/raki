<% if @page.authorized?(User.current, :view) %>
  <% current_revision = page_revisions(@page.namespace, @page.name).first %>
  <%=t 'page.footer',
    :date => l(@page.revision.date, :format => :full),
    :user => link_to((h @page.revision.user.display_name), @page.revision.user.page_url),
    :version => h(@page.revision.version)
  %>
<% end %>
<% if @page.authorized?(User.current, :view) %>
  <%=link_to image_tag('feed.png', :alt => 'Feed'), { :controller => 'feed', :action => 'page', :namespace => h(@page.namespace), :page => h(@page.name)}, {:title => t('feed.page', :namespace => h(@page.namespace), :page => h(@page.name)), :class => 'feed'} %>
<% end %>