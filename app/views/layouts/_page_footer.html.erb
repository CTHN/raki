<div id="page_footer">
  <% if !@page_info.nil? && authorized?(@namespace, @page, :view) %>
    <%=t 'page.footer',
      :date => l(@page_info[:date], :format => :full),
      :user => link_to((h @page_info[:user].display_name), :controller => 'page', :action => 'view', :namespace => h(Raki.userpage_namespace), :id => h(@page_info[:user].username)),
      :version => h(@page_info[:version]) unless @page_info.nil?
    %>
  <% end %>
  <% if !@namespace.nil? && !@page.nil? && authorized?(@namespace, @page, :view) %>
    <%=link_to image_tag('feed.png', :alt => 'Feed'), { :controller => 'page', :action => 'view', :format => 'atom', :namespace => h(@namespace), :id => h(@page) }, {:title => t('page.feed', :namespace => h(@namespace), :page => h(@page)), :class => 'feed'} %>
  <% end %>
</div>