<% if authenticated? %>
  <%= link_to((h User.current.username), "/page/#{h(User.current.username)}", :id => 'auth_username') %>
  <%= link_to((t 'authinfo.logout'), {:controller => 'authentication', :action => 'logout'}) %>
<% else %>
  <%= link_to((t 'authinfo.login'), {:controller => 'authentication', :action => 'login'}) %>
<% end %>
