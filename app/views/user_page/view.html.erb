<% if userpage_exists? @user %>
  <%=insert_userpage @user, @revision %>
<% else %>
  <div class="information">
    <%=t 'user_page.not_exists.msg' %>
    <% if authenticated? %>
      <%=t 'page.not_exists.edit_msg', :edit_link => link_to(t('page.not_exists.edit_link'), {:controller => 'user_page', :action => 'edit', :user => @user}) %>
    <% end %>
  </div>
<% end %>